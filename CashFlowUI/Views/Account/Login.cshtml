@model CashFlowUI.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="container border" style="padding:20px">
    <div class="row">
        <h3 class="loginTitle">Login in the system</h3>
    </div>
    <span id="loginErrorMessage">@ViewBag.LoginErrorMessage</span>
    <div class="row">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group row">
                    <div class="col-3" id="userLabel">
                        @Html.LabelFor(m => m.User)
                    </div>
                    <span asp-validation-for="@Model.User" class="text-danger"></span>
                    <div class="col-5">
                        @Html.TextBoxFor(m => m.User, new { @class="form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        @Html.LabelFor(m => m.Password)
                    </div>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <div class="col-5">
                        @Html.PasswordFor(m => m.Password, new { @class="form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 col-md-offset-2">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                </div>
                <div class="form-group" style="margin-bottom:20px">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" class="btn btn-success" value="Login" />
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="row">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))
